# Use an official Node.js image as the base
FROM node:18-slim

# Set the working directory inside the container
WORKDIR /app

# Install necessary dependencies
RUN apt-get update && apt-get install -y \
  curl \
  gnupg \
  ca-certificates \
  libx11-dev \
  libxkbfile-dev \
  libsecret-1-dev \
  fonts-liberation \
  libappindicator3-1 \
  libnss3 \
  lsb-release \
  xdg-utils \
  && rm -rf /var/lib/apt/lists/*

# Install Google Chrome
RUN curl -sSL https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb -o google-chrome.deb && \
    dpkg -i google-chrome.deb || apt-get -fy install && \
    rm google-chrome.deb

# Install Angular CLI globally
RUN npm install -g @angular/cli@17

# Install Karma as a dev dependency
RUN npm install karma --save-dev

# Install Chrome Headless
RUN npm install chrome-headless

# Copy the frontend directory (current context) into /app
COPY . /app

# Expose the port that Angular will use (optional, typically 4200)
EXPOSE 4200

# Define the default command to run
CMD ["bash"]
